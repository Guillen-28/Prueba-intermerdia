@model Entidad.Factura

@{
    ViewData["Title"] = "Agregar Factura";
}

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" crossorigin="anonymous" />

<style>
    body {
        background-color: #f2f4f7;
    }

    .form-container {
        max-width: 600px;
        margin: 40px auto;
        background: white;
        padding: 30px 40px;
        border-radius: 12px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
    }

    h2 {
        text-align: center;
        margin-bottom: 25px;
        color: #0d6efd;
        font-weight: 700;
        font-size: 2rem;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1);
    }

    label {
        font-weight: 600;
        margin-bottom: 6px;
        display: block;
        color: #333;
    }

    input[type="text"],
    input[type="email"],
    input[type="number"],
    input[type="date"] {
        width: 100%;
        padding: 10px 12px;
        border: 1.8px solid #ced4da;
        border-radius: 8px;
        font-size: 1rem;
        transition: border-color 0.3s ease;
    }

        input[type="text"]:focus,
        input[type="email"]:focus,
        input[type="number"]:focus,
        input[type="date"]:focus {
            border-color: #0d6efd;
            outline: none;
            box-shadow: 0 0 8px rgba(13, 110, 253, 0.25);
        }

    .validation-error {
        color: #dc3545;
        font-size: 0.9rem;
        margin-top: 4px;
    }

    .btn-submit {
        margin-top: 25px;
        width: 100%;
        background-color: #0d6efd;
        color: white;
        font-weight: 600;
        padding: 12px;
        border: none;
        border-radius: 10px;
        font-size: 1.1rem;
        cursor: pointer;
        box-shadow: 0 6px 20px rgba(13, 110, 253, 0.4);
        transition: background-color 0.3s ease;
    }

        .btn-submit:hover {
            background-color: #084298;
        }

    .btn-cancel {
        margin-top: 12px;
        width: 100%;
        background-color: #6c757d;
        color: white;
        font-weight: 600;
        padding: 10px;
        border: none;
        border-radius: 10px;
        font-size: 1rem;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .btn-cancel:hover {
            background-color: #565e64;
        }
</style>

<div class="form-container">
    <h2><i class="fas fa-plus-circle me-2"></i>Agregar Factura</h2>

    <form asp-action="Create" method="post" novalidate>
        <div class="mb-3">
            <label asp-for="Nombre" class="form-label"><i class="fas fa-box me-1"></i> Producto</label>
            <input asp-for="Nombre" class="form-control" placeholder="Nombre del producto" />
            <span asp-validation-for="Nombre" class="validation-error"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Especialidad" class="form-label"><i class="fas fa-tag me-1"></i> Marca</label>
            <input asp-for="Especialidad" class="form-control" placeholder="Marca del producto" />
            <span asp-validation-for="Especialidad" class="validation-error"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label"><i class="fas fa-envelope me-1"></i> Email</label>
            <input asp-for="Email" type="email" class="form-control" placeholder="correo@ejemplo.com" />
            <span asp-validation-for="Email" class="validation-error"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Monto" class="form-label"><i class="fas fa-dollar-sign me-1"></i> Monto</label>
            <input asp-for="Monto" type="number" step="0.01" min="0" class="form-control" placeholder="0.00" />
            <span asp-validation-for="Monto" class="validation-error"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Fecha" class="form-label"><i class="fas fa-calendar-day me-1"></i> Fecha</label>
            <input asp-for="Fecha" type="date" class="form-control" />
            <span asp-validation-for="Fecha" class="validation-error"></span>
        </div>

        <button type="submit" class="btn-submit"><i class="fas fa-save me-1"></i> Guardar Factura</button>
        <a asp-action="Index" class="btn-cancel d-block text-center text-decoration-none mt-2"><i class="fas fa-arrow-left me-1"></i> Cancelar</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}